{
  "openapi": "3.1.0",
  "info": {
    "title": "Funny Reservation API",
    "version": "1.0.0",
    "description": "Current API spec for Funny Reservation."
  },
  "servers": [
    {
      "url": "https://funny-reservation-ghv4mlyezq-an.a.run.app"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "operationId": "healthCheck",
        "summary": "Health check",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": { "type": "string" }
              }
            }
          }
        }
      }
    },
    "/booking/availability": {
      "get": {
        "operationId": "checkBookingAvailability",
        "summary": "Check booking eligibility (bookable)",
        "description": "指定枠が予約可能（bookable）かを判定します。予約可能の定義は『予約枠ルールを満たす + Googleカレンダー（正）に重複する予定がない』です。予約不可の場合は 409 を返し、reasons に理由（診断用）を入れます。時間はUTC(入力ISO/RFC3339、返却canonical UTC)。",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "startAt",
            "in": "query",
            "required": true,
            "schema": { "type": "string" },
            "description": "Start datetime (ISO/RFC3339). Examples: 2026-01-18T00:00Z / 2026-01-18T00:00:00Z / 2026-01-18T00:00:00.000Z / 2026-01-18T09:00:00+09:00. Server normalizes to UTC canonical."
          },
          {
            "name": "durationMinutes",
            "in": "query",
            "required": true,
            "schema": { "type": "integer" },
            "description": "Duration minutes (multiple of 60)"
          }
        ],
        "responses": {
          "200": {
            "description": "Booking is bookable",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/BookingEligibilityResult" }
              }
            }
          },
          "409": {
            "description": "Booking is not bookable",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/BookingEligibilityResult" }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      }
    },
    "/booking/draft": {
      "post": {
        "operationId": "createProvisionalBooking",
        "summary": "Create provisional booking (calendar event)",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/CreateProvisionalBookingCommand" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Provisional booking",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ProvisionalBookingDTO" }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      }
    },
    "/booking/available-slots/nearest": {
      "get": {
        "operationId": "getNearestAvailableBookingSlots",
        "summary": "Get nearest available booking slots",
        "description": "直近の予約可能枠を返します。営業時間は10:00-18:00(開始>=10:00, 終了<=18:00)。同日の既存予約数と施工時間で開始時刻を制約: 300分超は予約0件なら10/11/12時開始のみ(予約ありは不可)。300分以下は予約0件なら10時or14時、予約ありは営業時間内なら可。時間はUTC(入力ISO/RFC3339、返却canonical UTC)。",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "from",
            "in": "query",
            "required": false,
            "schema": { "type": "string" },
            "description": "Search start (ISO/RFC3339). If omitted, server uses now(). Server normalizes to UTC canonical before searching."
          },
          {
            "name": "durationMinutes",
            "in": "query",
            "required": true,
            "schema": { "type": "integer" },
            "description": "Duration minutes (>=60, multiple of 60)"
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "schema": { "type": "integer", "default": 5, "maximum": 20, "minimum": 1 },
            "description": "How many slots to return (default 5, max 20)"
          },
          {
            "name": "searchDays",
            "in": "query",
            "required": false,
            "schema": { "type": "integer", "default": 14, "maximum": 90, "minimum": 1 },
            "description": "How many days to look ahead (default 14, max 90)"
          }
        ],
        "responses": {
          "200": {
            "description": "Nearest available booking slots",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/GetNearestAvailableBookingSlotsResult" }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "API_TOKEN"
      }
    },
    "schemas": {
      "BookingEligibilityResult": {
        "type": "object",
        "required": ["bookable", "reasons"],
        "properties": {
          "bookable": { "type": "boolean" },
          "reasons": {
            "type": "array",
            "items": { "type": "string" },
            "description": "予約不可の理由（診断用）。予約可能の場合は空配列。"
          },
          "normalized": {
            "type": "object",
            "required": ["startAt", "endAt", "durationMinutes"],
            "properties": {
              "startAt": { "type": "string" },
              "endAt": { "type": "string" },
              "durationMinutes": { "type": "integer" }
            }
          }
        }
      },
      "CreateProvisionalBookingCommand": {
        "type": "object",
        "required": ["carId", "startAt", "durationMinutes", "customerName", "phoneNumber"],
        "properties": {
          "carId": { "type": "string" },
          "startAt": {
            "type": "string",
            "description": "Start datetime (ISO/RFC3339). Server normalizes to UTC canonical (YYYY-MM-DDTHH:mm:ss.SSSZ)."
          },
          "durationMinutes": { "type": "integer" },
          "customerName": { "type": "string" },
          "phoneNumber": { "type": "string" },
          "carModelName": { "type": "string" },
          "menuLabel": { "type": "string" },
          "channel": { "type": "string" }
        }
      },
      "ProvisionalBookingDTO": {
        "type": "object",
        "required": ["carId", "startAt", "durationMinutes", "calendarEventId"],
        "properties": {
          "carId": { "type": "string" },
          "startAt": {
            "type": "string",
            "description": "Canonical UTC datetime (YYYY-MM-DDTHH:mm:ss.SSSZ)."
          },
          "durationMinutes": { "type": "integer" },
          "calendarEventId": { "type": "string" }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "required": ["message"],
        "properties": {
          "message": { "type": "string" }
        }
      },
      "GetNearestAvailableBookingSlotsResult": {
        "type": "object",
        "required": ["from", "durationMinutes", "slots"],
        "properties": {
          "from": {
            "type": "string",
            "description": "Effective search start in canonical UTC datetime (YYYY-MM-DDTHH:mm:ss.SSSZ)."
          },
          "durationMinutes": { "type": "integer" },
          "slots": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/AvailableSlot" }
          }
        }
      },
      "AvailableSlot": {
        "type": "object",
        "required": ["startAt", "endAt"],
        "properties": {
          "startAt": {
            "type": "string",
            "description": "Canonical UTC datetime (YYYY-MM-DDTHH:mm:ss.SSSZ)."
          },
          "endAt": {
            "type": "string",
            "description": "Canonical UTC datetime (YYYY-MM-DDTHH:mm:ss.SSSZ)."
          }
        }
      }
    }
  }
}
